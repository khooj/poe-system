{
  "name": "assets-daisy",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "tailwind:watch": "bun run tailwind:build --watch -o ../priv/static/assets/app.css",
    "tailwind:build": "bunx tailwindcss -i app.css",
    "storybook-css": "bunx tailwindcss -i storybook.css -o ../priv/static/assets/storybook.css",
    "build": "bun build --outfile=../priv/static/assets/app.js ./index.js",
    "storybook": "bun build --outfile=../priv/static/assets/storybook.js ./storybook.js"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "daisyui": "^5.0.46",
    "isolated": "^3.0.25",
    "phoenix": "file:../deps/phoenix",
    "phoenix_html": "file:../deps/phoenix_html",
    "phoenix_live_view": "file:../deps/phoenix_live_view",
    "tailwindcss": "^4.1.11"
  }
}
